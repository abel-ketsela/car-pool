<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0"
         metadata-complete="true">
         
  <display-name>car-pool</display-name>
  <welcome-file-list>
   
    <welcome-file>/view/welcome.jsp</welcome-file>
   
  </welcome-file-list>
  <servlet>
  	<servlet-name>LoginController</servlet-name>
  	<display-name>LoginController</display-name>
  	<description></description>
  	<servlet-class>edu.mum.wap.carpool.controllers.LoginController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>UserAccountController</servlet-name>
  	<display-name>UserAccountController</display-name>
  	<description></description>
  	<servlet-class>edu.mum.wap.carpool.controllers.UserAccountController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>PostController</servlet-name>
  	<display-name>PostController</display-name>
  	<description></description>
  	<servlet-class>edu.mum.wap.carpool.controllers.PostController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>LoginController</servlet-name>
  	<url-pattern>/LoginController</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>UserAccountController</servlet-name>
  	<url-pattern>/user/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>PostController</servlet-name>
  	<url-pattern>/post/*</url-pattern>
  </servlet-mapping>
    
  
</web-app>
